@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    List<Nation> nations = (List<Nation>) ViewData["Nations"];
}

<div class="text-center">
    <h1 class="display-4">Maxico GDP Trend</h1>
 
</div>

<div class= "container">
    <canvas id="canvas"></canvas>
</div>

<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/chart.js@4.2.1/dist/chart.umd.min.js"></script>

<script type="text/javascript" src="js/site.js" ></script>

<div>

    <table class="table">
        <tr>
            <th>Date</th>
            <th>GDP</th>
        </tr>
        @foreach(var nation in nations){
            <tr>

                <td> @nation.DateTime.ToString("yyyy-MM-dd")</td>
                    <td> @nation.Value</td>
            
            
            </tr>

        }

    </table>

</div>